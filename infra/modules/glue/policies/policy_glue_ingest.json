{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowGlueAccess",
      "Effect": "Allow",
      "Principal": {
        "Service": "glue.amazonaws.com"
      },
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::coingecko-scripts-663354324751",
        "arn:aws:s3:::coingecko-scripts-663354324751/*",
        "arn:aws:s3:::coingecko-staging-663354324751",
        "arn:aws:s3:::coingecko-staging-663354324751/*"
      ],
      "Condition": {
        "StringEquals": {
          "aws:SourceAccount": "663354324751"
        }
      }
    }
  ]
}